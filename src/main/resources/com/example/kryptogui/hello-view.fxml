<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="795.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rsa.RSAEncryptionDecryption">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <TabPane prefHeight="872.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
    <tabs>
      <Tab text="Message">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <HBox prefHeight="436.0" prefWidth="600.0" />
            </children>
          </AnchorPane>
        </content>
      </Tab>
      <Tab text="File">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <HBox prefHeight="480.0" prefWidth="600.0">
                <children>
                  <VBox alignment="CENTER" prefHeight="480.0" prefWidth="280.0">
                    <children>
                      <Label text="Enter private key">
                        <font>
                          <Font name="System Bold" size="14.0" />
                        </font>
                      </Label>
                      <TextArea fx:id="EnterPrivateKeyForFiles" prefHeight="115.0" prefWidth="295.0">
                        <VBox.margin>
                          <Insets bottom="10.0" />
                        </VBox.margin>
                      </TextArea>
                      <Label alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#searchFileByExplorerAndEncryptData" prefHeight="85.0" prefWidth="289.0" style="-fx-background-color: grey;" text="Encrypt File">
                        <font>
                          <Font size="14.0" />
                        </font>
                        <effect>
                          <Glow />
                        </effect>
                        <VBox.margin>
                          <Insets bottom="10.0" />
                        </VBox.margin>
                      </Label>
                    </children>
                    <HBox.margin>
                      <Insets right="20.0" />
                    </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="480.0" prefWidth="280.0">
                    <HBox.margin>
                      <Insets left="20.0" />
                    </HBox.margin>
                    <children>
                      <Label text="Enter public key">
                        <font>
                          <Font name="System Bold" size="14.0" />
                        </font>
                      </Label>
                      <TextArea fx:id="enterPublicKeyForFiles" prefHeight="115.0" prefWidth="295.0">
                        <VBox.margin>
                          <Insets bottom="10.0" />
                        </VBox.margin>
                      </TextArea>
                      <Label alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#searchFileByExplorerAndDecryptData" prefHeight="85.0" prefWidth="289.0" style="-fx-background-color: grey;" text="Decrypt File">
                        <font>
                          <Font size="14.0" />
                        </font>
                        <effect>
                          <Glow />
                        </effect>
                      </Label>
                    </children>
                  </VBox>
                </children>
              </HBox>
            </children>
          </AnchorPane>
        </content>
      </Tab>
    </tabs>
  </TabPane>
  <Label text="Szyforwanie i odszyfrowanie" />
</VBox>
